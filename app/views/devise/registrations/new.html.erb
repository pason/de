<h2>Sign up</h2>

<%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), style: :horizontal, left: "col-sm-3", right: "col-sm-4") do |f| %>
  <%= f.email_field :email, :autofocus => true %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
	<%= f.form_group do %>
		<%= f.submit "Sign up" %>
	<% end %>
<% end %>

<%= render "devise/shared/links" %>
