<h2>Sign in</h2>

<%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name), style: :horizontal, left: "col-sm-3", right: "col-sm-4") do |f| %>
  
  <%= f.email_field :email, :autofocus => true %>
  <%= f.password_field :password %>

  <% if devise_mapping.rememberable? -%>
  <%= f.form_group do %>
    <%= f.check_box :remember_me %>
  <% end %>
  <% end -%>

  <%= f.form_group do %>
		<%= f.submit "Sign in" %>
	<% end %>
<% end %>

<%= render "devise/shared/links" %>
