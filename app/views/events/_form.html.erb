 <div class='well'>
  <%= bootstrap_form_for(@event, style: :horizontal, left: "col-sm-2", right: "col-sm-6", :html => { :multipart => true }) do |f| %>
    
    <%= f.text_field :name%>

    <%= f.text_area :description %>


    <div class="form-group <% if @event.errors.any? and !@event.errors[:start_time].blank? %> has-error <%end%>">
        <label class="col-sm-2 control-label" for="event_description">Start Time</label>
        <div class='date col-sm-6  datetimepicker-group input-group' >
          <%= f.datetime_field :start_time, :class=> 'form-control',  value: @event.start_time.respond_to?('strftime') ? @event.start_time.strftime('%Y-%m-%d %H:%M') : nil  %>
            <span class="input-group-addon">
              <span data-icon-element="" class="fa fa-calendar"></span>
            </span>
        </div>
        <% if @event.errors.any? and !@event.errors[:start_time].blank? %>
          <div class="col-sm-2"></div>
          <div class='col-sm-6'>
            <span class="help-block"><%= @event.errors[:start_time].first %></span>
          </div>
        <% end %>
    </div>

     <div class="form-group <% if @event.errors.any? and !@event.errors[:end_time].blank? %> has-error <%end%>">
        <label class="col-sm-2 control-label" for="event_description">End Time</label>
        <div class='date col-sm-6 datetimepicker-group input-group'>
          <%= f.datetime_field :end_time, :class=> 'form-control',  value: @event.end_time.respond_to?('strftime') ? @event.end_time.strftime('%Y-%m-%d %H:%M') : nil  %>
            <span class="input-group-addon">
              <span data-icon-element="" class="fa fa-calendar"></span>
            </span>
        </div>
        <% if @event.errors.any? and !@event.errors[:end_time].blank? %>
          <div class="col-sm-2"></div>
          <div class='col-sm-6'>
            <span class="help-block"><%= @event.errors[:end_time].first %></span>
          </div>
        <% end %>
    </div>
    
    <%= f.text_field :location %>
    <%= f.file_field :logo %>
    
    <%= f.form_group do %>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), events_path, :class => 'btn btn-default' %>
    <% end %>
  <% end %>

</div>


  <script type="text/javascript">
      $(function () {
          $('.datetimepicker-group').datetimepicker({ 
            format: 'YYYY-MM-DD HH:mm',
            icons: {
              time: "fa fa-clock-o",
              date: "fa fa-calendar",
              up: "fa fa-arrow-up",
              down: "fa fa-arrow-down"
            }
          }
        );
      });
  </script>
 
